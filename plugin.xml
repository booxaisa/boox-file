<?xml version="1.0" encoding="utf-8"?>
<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
        id="com.boox.booxfile"
        version="0.7.0">

  <name>Hello</name>

  <engines>
    <engine name="cordova" version=">=3.4.0"/>
  </engines>

  <asset src="www/booxfile.js" target="js/booxfile.js"/>

  <js-module src="www/booxfile.js" name="booxfile">
    <clobbers target="hello" />
  </js-module>

  <platform name="android">

    <config-file target="res/xml/config.xml" parent="/*">
      <feature name="Hello">
        <param name="android-package" value="com.boox.plugin.booxfile"/>
      </feature>
    </config-file>

    <source-file src="src/android/booxfile.java" target-dir="src/com/boox/plugin/"/>
  </platform>

  <platform name="ios">
    
    <config-file target="config.xml" parent="/widget">
      <feature name="Booxfile">
        <param name="ios-package" value="HWPBooxfile" />
      </feature>
    </config-file>

    <header-file src="src/ios/HWPBooxfile.h" target-dir="BooxfilePlugin"/>
    <source-file src="src/ios/HWPBooxfile.m" target-dir="BooxfilePlugin"/>
  </platform>

  <platform name="wp7">
    <source-file src="src/wp7/Booxfile.cs"/>
  </platform>

</plugin>
